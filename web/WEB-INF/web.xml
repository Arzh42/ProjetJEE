<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <resource-ref>

        <description>jdbcDatabaseRessource</description>

        <res-ref-name>jdbc/JEE</res-ref-name>

        <res-type>javax.sql.DataSource</res-type>

        <res-auth>Container</res-auth>

    </resource-ref>

    <servlet>
        <display-name>Hello World</display-name>
        <servlet-name>HelloWorldServlet</servlet-name>
        <servlet-class>org.tutorial.HttpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloWorldServlet</servlet-name>
        <url-pattern>/HelloWorldServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>etu_data</servlet-name>
        <servlet-class>org.projet.Etu_data</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>etu_data</servlet-name>
        <url-pattern>/etu_data</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GestEtu</servlet-name>
        <servlet-class>org.projet.GestEtu</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>GestEtu</servlet-name>
        <url-pattern>/GestEtu</url-pattern>
    </servlet-mapping>
</web-app>